<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.controllers.MenuController"
      alignment="TOP_CENTER"
      spacing="20">

    <!-- Правильный padding -->
    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <Label text="Меню" style="-fx-font-weight: bold;">
        <font>
            <Font size="28"/>
        </font>
    </Label>

    <Button text="Добавить ДТП"
            onAction="#onAddAccident"
            style="-fx-background-color: #ff4444; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"
            prefWidth="200" prefHeight="40"/>

    <Button text="Просмотр ДТП"
            onAction="#onViewAccidents"
            style="-fx-background-color: #00aaff; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"
            prefWidth="200" prefHeight="40"/>

    <Button text="Статистика"
            onAction="#onStatistics"
            style="-fx-background-color: #00cc66; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"
            prefWidth="200" prefHeight="40"/>

</VBox>
